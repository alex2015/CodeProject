@using NPA.WEB.Models
@{

    var version = typeof(MvcApplication).Assembly.GetName().Version.ToString();
    string baseUrl = System.Configuration.ConfigurationManager.AppSettings["BaseUrl"];

    var codeProjectBundles = new List<string> {"home", "persons", "products"};

    var bundles = codeProjectBundles.Select(controller => new CustomBundle
    {
        BundleName = controller, Path = BundleTable.Bundles.ResolveBundleUrl("~/bundles/" + controller), IsLoaded = false
    }).ToList();

    var bundleInformation = new BundleInformation {Bundles = bundles};
    string bundleInformationJSON = Newtonsoft.Json.JsonConvert.SerializeObject(bundleInformation, Newtonsoft.Json.Formatting.None);

}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />

    <title>AngularJS Application</title>

    <script src="~/Scripts/require.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    
   
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/ng-file-upload")
 

    <base href="@baseUrl" />

</head>
<body ng-app="codeProject" ng-controller="masterController as vm" ng-init="vm.initializeController()">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li><a href="Home/Index">Home</a></li>
                    <li><a href="Persons/PersonInquiry">People</a></li>
                    <li><a href="Products/ProductInquiry">Products</a></li>                  
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AngularJS Application</p>          
        </footer>
    </div>


    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?ver=" + @version + "\"></script>", "~/bundles/shared")
    }
    else
    {
        @Scripts.Render("~/bundles/shared")
    }
    <script>

        (function () {

            var codeProjectApplication = angular.module('codeProject');
            codeProjectApplication.provider('applicationConfiguration', function () {
                var _version;
                var _bundles;
                return {
                    setVersion: function (version) {
                        _version = version;
                    },
                    setBundles: function (bundles) {
                        _bundles = bundles;
                    },
                    getVersion: function () {
                        return _version;
                    },
                    getBundles: function () {
                        return _bundles;
                    },
                    $get: function () {
                        return {
                            version: _version,
                            bundles: _bundles
                        }
                    }
                }
            });

            codeProjectApplication.config(function (applicationConfigurationProvider) {
                applicationConfigurationProvider.setVersion('@version');
                applicationConfigurationProvider.setBundles('@Html.Raw(bundleInformationJSON)');
            });       

        })();

    </script>

    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?ver=" + @version + "\"></script>", "~/bundles/routing-debug")
    }
    else
    {
        @Scripts.Render("~/bundles/routing-production")
    }

    @RenderSection("scripts", required: false)

</body>
</html>
